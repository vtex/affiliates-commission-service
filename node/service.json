{
  "memory": 256,
  "ttl": 10,
  "timeout": 2,
  "minReplicas": 2,
  "maxReplicas": 4,
  "workers": 1,
  "routes": {
    "affiliateOrders": {
      "path": "/_v/affiliateOrders/:affiliateId",
      "public": true
    }
  },
  "events": {
    "setAffiliatesOrders": {
      "sender": "vtex.orders-broadcast",
      "topics": ["order-created"]
    },
    "updateOrderStatus": {
      "sender": "vtex.orders-broadcast",
      "topics": ["payment-approved", "cancel"]
    },
    "updateInvoicedOrder": {
      "sender": "vtex.orders-broadcast",
      "topics": ["invoiced"]
    }
  }
}
